<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="500dp">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:id="@+id/table_general1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">


            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_InfoGeneral"
                android:background="@android:color/transparent"
                android:text="Nombre:"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/newdialog_edit_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_InfoGeneral"
                android:background="@android:color/transparent"
                android:hint="Click to type"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="30sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ID:"
                android:id="@+id/text_ID"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/newdialog_edit_ID"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_InfoGeneral"
                android:background="@android:color/transparent"
                android:hint="Click to type"
                android:inputType="text"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="30sp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
               android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Dirección:"
                android:id="@+id/text_adress"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Click to type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_adress"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tele:"
                android:id="@+id/text_Telephone"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Click to type"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="number"
                android:id="@+id/newdialog_edit_Telephone"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Género:"
                android:id="@+id/text_gender"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">

            <Spinner

                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/newdialog_edit_gender"

                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/text_gender"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="100sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Casado:"
                android:id="@+id/text_Married"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/button_InfoGeneral"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">

            <Spinner

                android:id="@+id/newdialog_edit_Married"
                xmlns:android="http://schemas.android.com/apk/res/android"

                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fecha de Nacimiento:"
                android:id="@+id/text_Birthdate"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/newdialog_edit_gender"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Click para elegir"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_Birthdate"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:clickable="true"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ninos:"
                android:id="@+id/text_Children"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/newdialog_edit_Married"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">

            <TextView

                android:id="@+id/newdialog_edit_Children"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_Children"
                android:hint="Click para elegir"
                android:background="@android:color/transparent"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="30sp"
                android:visibility="visible"
                android:onClick="choose_children"
                android:clickable="true"
                tools:ignore="OnClick" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Altura"
                android:id="@+id/text_Height"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/dialog_edit_Birthdate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:onClick="height"
                android:clickable="true"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_Height"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:hint="Click para elegir "
                android:clickable="true"
            />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pesadura"
                android:id="@+id/text_Weight"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/dialog_edit_Children"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Click para elegir"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/newdialog_edit_Weight"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:clickable="true"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_height="60dp"
                android:layout_width="600dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alergias:"
                android:id="@+id/text_allergies"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_below="@+id/dialog_edit_Height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />
            </TableRow>
        <TableRow>

            <EditText
                android:id="@+id/newdialog_edit_Allergies"
                android:layout_width="600dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:hint="Click to type"
                android:inputType="textImeMultiLine"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="30sp" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_height="60dp"
                android:layout_width="600dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Condiciones Medicos:"
                android:id="@+id/text_MedicalConditions"
                android:background="@android:color/transparent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold" />
            </TableRow>
        <TableRow>

            <EditText
                android:id="@+id/newdialog_edit_MedicalConditions"
                android:layout_width="600dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:hint="Click to type "
                android:inputType="textImeMultiLine"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>
    </ScrollView>
</LinearLayout>
