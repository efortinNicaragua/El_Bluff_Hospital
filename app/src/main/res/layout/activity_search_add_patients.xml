<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/greygradient"
    tools:context="ethanfortin_nicaragua.elbluffhospital.PatientInfo.SearchAddPatients">

    <TextView
        android:id="@+id/text_filterbar2"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Nombre de Paciente "
        android:textAlignment="center"
        android:textColor="#00004d"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
            android:id="@+id/filter_bar2"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="310dp"
            android:ems="10"
            android:hint="Click"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textAlignment="center"/>
    <TextView
        android:id="@+id/header_patid"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="Nombre"
        android:textAlignment="center"
        android:textColor="#00004d"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/header_name"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/header_patid"
        android:layout_toRightOf="@+id/header_patid"
        android:gravity="center_vertical"
        android:text="ID de Paciente"
        android:textAlignment="center"
        android:textColor="#00004d"
        android:textSize="22sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/header_fileid"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="File ID"
        android:textAlignment="center"
        android:textColor="#00004d"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/header_name"
        android:layout_toEndOf="@+id/header_name" />

    <ListView
        android:id="@+id/patient_list"
        android:layout_width="fill_parent"
        android:layout_height="600dp"
        android:layout_marginTop="165dp"
        android:layout_marginBottom="30dp"
        android:scrollbarSize="10dp"
        android:scrollbarThumbVertical="@color/colorAccent">

    </ListView>

            <Button
                android:id="@+id/button_newpatient"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/patient_list"
                android:layout_weight="1"
                android:background="#00004d"
                android:onClick="NuevoPaciente"
                android:padding="1dp"
                android:text="Nuevo Paciente"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#cccccc"
                android:textSize="35sp" />

</RelativeLayout>
